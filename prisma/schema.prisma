// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- NextAuth (Auth.js) Prisma adapter models ----
// https://authjs.dev/reference/adapter/prisma

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  loginEvents   LoginEvent[]
  projects      Project[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

// ---- App: log where/how user signed in (IP, user agent, etc.) ----

model LoginEvent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent String?
  ip        String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// ---- App: projects, tracker schemas, data, conversations ----

enum Instance {
  SINGLE
  MULTI
}

enum Role {
  USER
  ASSISTANT
}

model Project {
  id             String    @id @default(cuid())
  userId         String
  name           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  trackerSchemas TrackerSchema[]
  conversations  Conversation[]

  @@index([userId])
}

model TrackerSchema {
  id          String       @id @default(cuid())
  projectId   String
  name        String?
  instance    Instance     @default(SINGLE)
  schema      Json
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  trackerData TrackerData[]

  @@index([projectId])
}

model TrackerData {
  id               String        @id @default(cuid())
  trackerSchemaId  String
  label            String?
  data             Json
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  trackerSchema    TrackerSchema @relation(fields: [trackerSchemaId], references: [id], onDelete: Cascade)

  @@index([trackerSchemaId])
}

model Conversation {
  id        String    @id @default(cuid())
  projectId String
  title     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([projectId])
}

model Message {
  id                    String       @id @default(cuid())
  conversationId        String
  role                  Role
  content               String
  trackerSchemaSnapshot Json?
  managerData           Json?
  createdAt             DateTime     @default(now())
  conversation          Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}
